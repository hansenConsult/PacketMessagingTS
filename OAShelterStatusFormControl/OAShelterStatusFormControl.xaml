                                       Style="{StaticResource ShelterStatusHeaderText}"/>
                            <TextBox x:Name="capacity" Grid.Column="1" Grid.Row="1" Margin="2"
                                     Style="{StaticResource MuniStatusNumberTextBox}"
                                     Width="73" HorizontalAlignment="Left" Tag="40a.,conditionallyrequired"
                                     TextChanged="Capacity_TextChanged" VerticalAlignment="Center"/>
                            <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Occupancy:" 
                                       Style="{StaticResource ShelterStatusHeaderText}"/>
