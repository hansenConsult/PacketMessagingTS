                                             Style="{StaticResource MuniStatusTimeTextBox}"
                                             Text="{x:Bind MsgTime, Mode=TwoWay}" 
                                             Tag="1b.,required,Enter a time"
                                             TextChanged="TextBox_TimeChanged" Padding="10,4,6,6"/>
                                    <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1,0,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource LabelFontTNR14B}" 
                                                       Text="Handling:" VerticalAlignment="Center" Margin=" 5"/>
                                            <MyNamespace:ToggleButtonGroup x:Name="handlingOrder" 
                                                                           CheckedControlName ="{x:Bind HandlingOrder, Mode=TwoWay}" 
                                                                           Tag="5.,required,Indicate Msg. Handling Order."/>
                                            <RadioButton x:Name="immediate" GroupName="handlingOrder" 
                                                         Style="{StaticResource RadioButtonTNR12B}" Margin="10,0" 
                                                         Content="IMMEDIATE (ASAP)" Checked="Subject_Changed"
                                                         ToolTipService.ToolTip="As soon as possible" Tag="IMMEDIATE">
                                            </RadioButton>
                                            <RadioButton x:Name="priority" GroupName="handlingOrder" 
                                                         Style="{StaticResource RadioButtonTNR12B}" Margin="10,0" 
                                                         Content="PRIORITY (&lt; 1 hr)" Checked="Subject_Changed"
                                                         ToolTipService.ToolTip="Less than one hour" Tag="PRIORITY"/>
                                            <RadioButton x:Name="routine" GroupName="handlingOrder" 
                                                         Style="{StaticResource RadioButtonTNR12B}" Margin="10,0" 
                                                         Content="ROUTINE (&lt; 2 hrs)" Checked="Subject_Changed"
                                                         ToolTipService.ToolTip="More than one hour" Tag="ROUTINE"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>-->
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" Background="LightGray" BorderBrush="Black" BorderThickness="1,1,1,1"/>
                                <TextBlock x:Name="labelTo" Grid.Column="0"  Style="{StaticResource LabelFontTNR14B}" Text=" To:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" >
                                    <Border BorderBrush="Black" BorderThickness="0,1">
                                        <StackPanel x:Name="toICSPositionPanel">
                                            <TextBlock Padding="10,2,0,2" 
                                                Text="7.) ICS Position:" FontSize="12" FontFamily="Times New Roman" 
                                                FontWeight="Bold" Foreground="Black" />
                                            <AutoSuggestBox x:Name="autoSuggestBoxToICSPosition" Margin="10,0,10,2"     
                                                    PlaceholderText="Select ICS Position"
                                                    Style="{StaticResource AutoSuggestICSPosition}"                                                    
                                                    BorderBrush="Gray"
                                                    BorderThickness="2"
                                                    TextChanged="TextBoxFromICSPosition_TextChanged"
                                                    SuggestionChosen="TextBoxFromICSPosition_SuggestionChosen"
                                                    Tag="7a.,required,Enter a To Position." VerticalAlignment="Top">
                                            </AutoSuggestBox>
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" >
                                        <StackPanel >
                                            <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5"  Text="9a.) Location:" />-->
                                            <TextBox x:Name="toLocation" Margin="10,0,10,2" 
                                                TextChanged="TextBox_TextChanged"
                                                Tag="7b.,required,Enter a To Location."
                                                HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                Header="Location:"/>
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                        <StackPanel >
                                            <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Name:" />-->
                                            <TextBox x:Name="toName" BorderThickness="1" Margin="10,0,10,2" Tag="7c."
                                                HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                Header="Name:"/>
                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0, 0">
                                        <StackPanel >
                                            <TextBox x:Name="toContactInfo" 
                                                BorderThickness="1" Margin="10,0,10,2" Tag="7d."
                                                TextChanged="PhoneNumber_TextChanged"
                                                HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                Header="Contact Info:"/>

                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                                <Border Grid.Column="2" Background="LightGray" BorderBrush="Black" BorderThickness="1,1,1,1"/>
                                <TextBlock x:Name="labelFrom" Grid.Column="2" Style="{StaticResource LabelFontTNR14B}" Text=" From:" VerticalAlignment="Center" />
                                <StackPanel Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,0">
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                        <StackPanel>
                                            <TextBlock Padding="10,2,0,2"
                                                Style="{StaticResource LabelFontTNR14B}"
                                                FontSize="12" FontFamily="Times New Roman" 
                                                FontWeight="Bold" Foreground="Black"
                                                Text="8.) ICS Position:" />
                                            <AutoSuggestBox x:Name="autoSuggestBoxFromICSPosition" Margin="10,0,10,2"
                                                    PlaceholderText="Select ICS Position"
                                                    Style="{StaticResource AutoSuggestICSPosition}"
                                                    BorderBrush="Gray"
                                                    BorderThickness="2"
                                                    TextChanged="TextBoxFromICSPosition_TextChanged"
                                                    SuggestionChosen="TextBoxFromICSPosition_SuggestionChosen"
                                                    Tag="8a.,required,Enter a From position." FontFamily="Times New Roman"/>
                                            <!--<TextBox  x:Name="textBoxFromICSPosition" Visibility="Collapsed" Tag="23" />-->
                                        </StackPanel>
                                        <!--<StackPanel >
										<TextBlock Style="{StaticResource LabelFontTNR14B}" Text="ICS Position:" Foreground="LightSalmon" Padding="5,0,5,5" />
										<RelativePanel x:Name="fromICSPos" >
											<Button x:Name="buttonSelectFromICSPosInput" RelativePanel.AlignVerticalCenterWithPanel="True" Content="Manual Input" Click="buttonSelectICSPosInput_Click" Margin="5,0,0,2" />
											<TextBox x:Name="textBoxFromICSPosition" Style="{StaticResource TypedText}" 
												RelativePanel.RightOf="buttonSelectFromICSPosInput"
												RelativePanel.AlignRightWithPanel="True"	 
												BorderBrush="White" Margin="10,0,10,2" Visibility="Collapsed"
                                                Tag="required,Enter a From position."/>
											-->
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" >
                                        <StackPanel >
                                            <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="9b.) Location:" />-->
                                            <TextBox x:Name="fromLocation" Margin="10,0,10,2" 
                                                TextChanged="TextBox_TextChanged"
                                                Tag="8b.,required,Enter a From Location."
                                                HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                Header="Location:"/>

                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                        <StackPanel >
                                            <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Name:" />-->
                                            <TextBox x:Name="fromName"  BorderThickness="1" Margin="10,0,10,2" Tag="8c."
                                                HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                Header="Name:"/>

                                        </StackPanel>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0, 0">
                                        <StackPanel >
                                            <TextBox x:Name="fromContactInfo" 
                                                Margin="10,0,10,2" Tag="8d." BorderThickness="1" 
                                                TextChanged="PhoneNumber_TextChanged"
                                                HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                Header="Contact Info:"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        <Grid Margin="0,10,0,0" BorderBrush="Black" BorderThickness="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="92"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="94"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Report Type:" VerticalAlignment="Center" Margin="5,0,10,0"/>
                            <MyNamespace:ToggleButtonGroup x:Name="reportType" 
                                                           CheckedControlName ="{x:Bind ReportType, Mode=TwoWay}" 
                                                           Tag="19.,required,Select Report Type"/>
                            <RadioButton Grid.Column="1" x:Name="update" GroupName="reportType" Content="Update"
                                         Checked="ReportType_Checked" Tag="Update"/>
                            <RadioButton Grid.Column="2" x:Name="complete" GroupName="reportType" Content="Complete"
                                         Checked="ReportType_Checked" Tag="Complete"/>
                            <TextBlock Grid.Column="3" Text="Jurisdiction Name:" 
                                       Style="{StaticResource MuniStatusFieldText}" />
                            <ComboBox Grid.Column="4" Name="jurisdictionName" Width="250"
                                      DisplayMemberPath="Item"
                                      SelectedValuePath="Item"
                                      ItemsSource="{x:Bind Municipalities, Mode=OneWay}"
                                      Style="{StaticResource MuniStatusComboBox}"
                                      SelectionChanged="Subject_Changed" 
                                      Loaded="ComboBox_Loaded"
                                      Tag="21.,required,Select a Jurisdiction Name."  />
                        </Grid>
                        <Grid BorderBrush="Black" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Text="Contact Information" 
                                    Style="{StaticResource MuniStatusHeaderText}"  />
                            <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="EOC Phone:" Style="{StaticResource MuniStatusFieldText}"/>
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Name="eocPhone" 
                                    Style="{StaticResource MuniStatusPhoneTextBox}" InputScope="TelephoneNumber" 
                                    Tag="23.,conditionallyrequired,Enter an EOC Phone number"
                                    TextChanged="TextBox_PhoneChanged"/>
                            <Border Grid.Column="2" Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBlock Grid.Column="2" Grid.Row="1" Text="EOC Fax:" 
                                    Style="{StaticResource MuniStatusFieldTextRight}" />
                            <Border Grid.Column="3" Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                                    <TextBox Grid.Column="3" Grid.Row="1" Name="eocFax" 
                                            Style="{StaticResource MuniStatusPhoneTextBox}" InputScope="TelephoneNumber" 
                                            Tag="24."
                                            TextChanged="TextBox_PhoneChanged"/>
                                    <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Primary EM Contact Name:" 
                                            Style="{StaticResource MuniStatusFieldText}"/>
                                    <Border Grid.Column="1" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                                    <TextBox Grid.Column="1" Grid.Row="2" Name="primEMContactName" 
                                            Style="{StaticResource MuniStatusTextBox}" 
                                            Tag="25.,conditionallyrequired,Enter the Primary EM Contact Name."
                                            TextChanged="TextBox_TextChanged"/>
                                    <Border Grid.Column="2" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                                    <TextBlock Grid.Column="2" Grid.Row="2" Text="Primary EM Contact Phone:" 
                                            Style="{StaticResource MuniStatusFieldTextRight}" />
                                    <Border Grid.Column="3" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                                    <TextBox Grid.Column="3" Grid.Row="2" Name="primEMContactPhone" 
                                            Style="{StaticResource MuniStatusPhoneTextBox}" 
                                            InputScope="TelephoneNumber" Tag="26.,conditionallyrequired,Enter the Primary EM Contact Phone No."
                                            TextChanged="TextBox_PhoneChanged"/>
                                    <Border Grid.Column="0" Grid.Row="3" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                                    <TextBlock Grid.Column="0" Grid.Row="3" Text="Secondary EM Contact Name:" 
                                            Style="{StaticResource MuniStatusFieldText}"/>
                                    <Border Grid.Column="1" Grid.Row="3" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                                    <TextBox Grid.Column="1" Grid.Row="3" Name="secEMContactName" 
                                            Style="{StaticResource MuniStatusTextBox}" Tag="27."/>
