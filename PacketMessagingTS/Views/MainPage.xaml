<Page x:Class="PacketMessagingTS.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:tg="using:Telerik.UI.Xaml.Controls.Grid"
      xmlns:core="using:Telerik.Data.Core"
      xmlns:vm="using:PacketMessagingTS.ViewModels"
      xmlns:helpers="using:PacketMessagingTS.Helpers"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d">

    <!--<Page.DataContext>
        <vm:MainViewModel x:Name="ViewModel" />
    </Page.DataContext>-->
    
    <Page.Resources>
        <helpers:AreaConverter x:Key="Converter1"/>
        <helpers:DateTimeConverter x:Key="DatetimeConverter"/>
        <helpers:BooleanToStringConverter x:Key="BooleanToStringConverter"
                                       TrueValue="Active"
                                       FalseValue="Retired" />

    </Page.Resources>
    <RelativePanel Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
                   x:Name="ContentArea"
                   Margin="{StaticResource MediumLeftRightMargin}">
        <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->

        <Pivot x:Name="MainPagePivot" 
               RelativePanel.AlignTopWithPanel="True"
               RelativePanel.AlignLeftWithPanel="True"
               RelativePanel.AlignRightWithPanel="True"
	           RelativePanel.Above="ButtomCommandBar"
               FontFamily="Bahnschrift"
               SelectedIndex="{x:Bind _mainViewModel.MainPagePivotSelectedIndex, Mode=TwoWay}"
               SelectionChanged="MainPagePivot_SelectionChanged"
               >

            <!--  Inbox  -->
            <PivotItem x:Uid="Main_Inbox"  x:Name="pivotItemInBox"  >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" x:Name="dataGridInbox"
                                AutoGenerateColumns="False"
                                SelectionMode="Single"
                                ItemsSource="{x:Bind _mainViewModel.Source, Mode=TwoWay}"
                                SelectionUnit="Cell"
                                ColumnResizeHandleDisplayMode="Always"
                                SelectedItem="{x:Bind _mainViewModel.SelectedMessage, Mode=TwoWay}"
                                >
                    <!--SelectionChanged="DataGrid_SelectionChanged"-->

                    <tg:RadDataGrid.Commands>
                        <helpers:CustomCellDoubleTapped/>
                    </tg:RadDataGrid.Commands>

                    <tg:RadDataGrid.Columns>
                        <tg:DataGridTemplateColumn Header="Area">
                            <tg:DataGridTemplateColumn.GroupDescriptor>
                                <core:PropertyGroupDescriptor PropertyName="ActiveDescription"
                                        DisplayContent="Active" />
                            </tg:DataGridTemplateColumn.GroupDescriptor>
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Area, Mode=OneWay, Converter={StaticResource Converter1}}" />
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTemplateColumn Header="Received Time" CanUserSort="True">
                            <tg:DataGridTemplateColumn.GroupDescriptor>
                                <core:PropertyGroupDescriptor PropertyName="ActiveDescription"
                                        DisplayContent="Active" />
                            </tg:DataGridTemplateColumn.GroupDescriptor>
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ReceivedTime, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center"  Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTemplateColumn Header="Sent Time">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding JNOSDate, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTextColumn PropertyName="Subject" Header="Subject"/>
                        <tg:DataGridTextColumn PropertyName="MessageNumber" Header="Msg.No." CanUserGroup="False"/>
                        <tg:DataGridTextColumn PropertyName="MessageTo" Header="To"/>
                        <tg:DataGridTextColumn PropertyName="MessageFrom" Header="From"/>
                        <tg:DataGridTextColumn PropertyName="BBSName" Header="BBS"/>
                        <tg:DataGridTextColumn PropertyName="MessageSize" Header="Size"/>
                    </tg:RadDataGrid.Columns>
                </tg:RadDataGrid>
            </PivotItem>

            <!--  Sent Items  -->
            <PivotItem x:Uid="Main_SentItems" x:Name="pivotItemSent" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" x:Name="dataGridSent"
                                AutoGenerateColumns="False"
                                SelectionMode="Multiple"
                                ColumnResizeHandleDisplayMode="Always"
                                ItemsSource="{x:Bind _mainViewModel.Source, Mode=TwoWay}"
                                SelectedItem="{x:Bind _mainViewModel.SelectedMessage, Mode=TwoWay}"
                                SelectionChanged="DataGrid_SelectionChanged" >
                    <tg:RadDataGrid.Commands>
                        <helpers:CustomCellDoubleTapped/>
                    </tg:RadDataGrid.Commands>

                    <tg:RadDataGrid.Columns>
                        <tg:DataGridTemplateColumn Header="Received Time">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ReceivedTime, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTemplateColumn Header="Sent Time">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding SentTime, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTextColumn PropertyName="Subject" Header="Subject"/>
                        <tg:DataGridTextColumn PropertyName="MessageNumber" Header="Msg.No." CanUserGroup="False"/>
                        <tg:DataGridTextColumn PropertyName="MessageTo" Header="To"/>
                        <tg:DataGridTextColumn PropertyName="MessageFrom" Header="From"/>
                        <tg:DataGridTextColumn PropertyName="BBSName" Header="BBSName" CanUserResize="False"/>
                        <tg:DataGridTextColumn PropertyName="MessageSize" Header="Size"/>
                    </tg:RadDataGrid.Columns>
                </tg:RadDataGrid>
            </PivotItem>

            <!--  Outbox  -->
            <PivotItem x:Uid="Main_Outbox" x:Name="pivotItemOutBox" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" Margin="{StaticResource EightTopMargin}"
                                x:Name="dataGridOutbox"
                                AutoGenerateColumns="False"
                                SelectionMode="Multiple"
                                ColumnResizeHandleDisplayMode="Always"
                                ItemsSource="{x:Bind _mainViewModel.Source, Mode=TwoWay}"
                                SelectedItem="{x:Bind _mainViewModel.SelectedMessage, Mode=TwoWay}"
                                SelectionChanged="DataGrid_SelectionChanged">
                    <tg:RadDataGrid.Commands>
                        <helpers:CustomCellDoubleTapped/>
                    </tg:RadDataGrid.Commands>

                    <tg:RadDataGrid.Columns>
                        <tg:DataGridTemplateColumn Header="Create Time">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CreateTime, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTextColumn PropertyName="MessageNumber" Header="Msg.No." CanUserGroup="False"/>
                        <tg:DataGridTextColumn PropertyName="Subject" Header="Subject"/>
                        <tg:DataGridTextColumn PropertyName="MessageTo" Header="To"/>
                        <tg:DataGridTextColumn PropertyName="MessageFrom" Header="From"/>
                        <tg:DataGridTextColumn PropertyName="BBSName" Header="BBS"/>
                        <tg:DataGridTextColumn PropertyName="MessageSize" Header="Size"/>
                    </tg:RadDataGrid.Columns>
                </tg:RadDataGrid>

            </PivotItem>

            <!--  Drafts  -->
            <PivotItem x:Uid="Main_Drafts" x:Name="pivotItemDrafts" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" x:Name="dataGridDrafts"
                                AutoGenerateColumns="False"
                                SelectionMode="Single"
                                ColumnResizeHandleDisplayMode="Always"
                                ItemsSource="{x:Bind _mainViewModel.Source, Mode=TwoWay}"
                                SelectedItem="{x:Bind _mainViewModel.SelectedMessage, Mode=TwoWay}"
                                SelectionChanged="DataGrid_SelectionChanged">
                    <tg:RadDataGrid.Commands>
                        <helpers:CustomCellDoubleTapped/>
                    </tg:RadDataGrid.Commands>

                    <tg:RadDataGrid.Columns>
                        <tg:DataGridTemplateColumn Header="Create Time">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CreateTime, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTextColumn PropertyName="Subject" Header="Subject" />
                        <tg:DataGridTextColumn PropertyName="MessageNumber" Header="Msg.No." CanUserGroup="False"/>
                        <tg:DataGridTextColumn PropertyName="MessageTo" Header="To"/>
                        <tg:DataGridTextColumn PropertyName="MessageFrom" Header="From"/>
                    </tg:RadDataGrid.Columns>
                </tg:RadDataGrid>
            </PivotItem>

            <!--  Archived Items  -->
            <PivotItem x:Uid="Main_ArchivedItems" x:Name="pivotItemArchive" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" x:Name="dataGridArchived"
                                AutoGenerateColumns="False"
                                SelectionMode="Multiple"
                                ColumnResizeHandleDisplayMode="Always"
                                ItemsSource="{x:Bind _mainViewModel.Source, Mode=TwoWay}"
                                SelectedItem="{x:Bind _mainViewModel.SelectedMessage, Mode=TwoWay}"
                                SelectionChanged="DataGrid_SelectionChanged">
                    <tg:RadDataGrid.Commands>
                        <helpers:CustomCellDoubleTapped/>
                    </tg:RadDataGrid.Commands>

                    <tg:RadDataGrid.Columns>
                        <tg:DataGridTemplateColumn Header="Area">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Area, Mode=OneWay, Converter={StaticResource Converter1}}"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTextColumn PropertyName="ReceivedTime" Header="Received Time"/>
                        <tg:DataGridTextColumn PropertyName="JNOSDate" Header="Sent Time"/>
                        <tg:DataGridTextColumn PropertyName="Subject" Header="Subject"/>
                        <tg:DataGridTextColumn PropertyName="MessageNumber" Header="Msg.No." CanUserGroup="False"/>
                        <tg:DataGridTextColumn PropertyName="MessageTo" Header="To"/>
                        <tg:DataGridTextColumn PropertyName="MessageFrom" Header="From"/>
                        <tg:DataGridTextColumn PropertyName="BBSName" Header="BBS"/>
                        <tg:DataGridTextColumn PropertyName="MessageSize" Header="Size"/>
                    </tg:RadDataGrid.Columns>
                </tg:RadDataGrid>
            </PivotItem>

            <!--  Deleted Items  -->
            <PivotItem x:Uid="Main_DeletedItems" x:Name="pivotItemDeleted" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" Margin="{StaticResource EightTopMargin}"
                                x:Name="dataGridDeleted"
                                AutoGenerateColumns="False"
                                SelectionMode="Single"
                                ColumnResizeHandleDisplayMode="Always"
                                ItemsSource="{x:Bind _mainViewModel.Source, Mode=TwoWay}"
                                SelectedItem="{x:Bind _mainViewModel.SelectedMessage, Mode=TwoWay}"
                                SelectionChanged="DataGrid_SelectionChanged">
                    <tg:RadDataGrid.Commands>
                        <helpers:CustomCellDoubleTapped/>
                    </tg:RadDataGrid.Commands>

                    <tg:RadDataGrid.Columns>
                        <tg:DataGridTemplateColumn Header="Create Time">
                            <tg:DataGridTemplateColumn.CellContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CreateTime, Mode=OneWay, Converter={StaticResource DatetimeConverter}}"
                                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </DataTemplate>
                            </tg:DataGridTemplateColumn.CellContentTemplate>
                        </tg:DataGridTemplateColumn>
                        <tg:DataGridTextColumn PropertyName="MessageNumber" Header="Msg.No." CanUserGroup="False"/>
                        <tg:DataGridTextColumn PropertyName="Subject" Header="Subject"/>
                        <tg:DataGridTextColumn PropertyName="MessageTo" Header="To"/>
                        <tg:DataGridTextColumn PropertyName="MessageFrom" Header="From"/>
                        <tg:DataGridTextColumn PropertyName="BBSName" Header="BBS"/>
                    </tg:RadDataGrid.Columns>
                </tg:RadDataGrid>
            </PivotItem>

        </Pivot>

        <CommandBar x:Name="ButtomCommandBar" Margin="-12,0,-12,0"
				    RelativePanel.AlignBottomWithPanel="True"
				    RelativePanel.AlignRightWithPanel="True"
				    RelativePanel.AlignLeftWithPanel="True" >
            <AppBarButton Label="Open" Icon="OpenFile" Click="AppBarMainPage_OpenMessage" />
            <!--<AppBarButton x:Name="appBarPrint" Label="Print Message" HorizontalAlignment="Right" Click="AppBarPrint_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE2F6;"/>
                </AppBarButton.Icon>
            </AppBarButton>-->
            <AppBarButton Label="Send/Receive" Icon="Send" Click="AppBarMainPage_SendReceive" />
            <AppBarButton Label="Delete" Icon="Delete" Click="AppBarMainPage_DeleteItemAsync" HorizontalAlignment="Right" />
        </CommandBar>
    </RelativePanel>
</Page>
