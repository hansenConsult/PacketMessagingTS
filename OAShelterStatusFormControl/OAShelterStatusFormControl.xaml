                                <TextBox PlaceholderText="d.ddd" Width="150" 
                                         Style="{StaticResource MuniStatusTextBox}" Tag="37a."/>
                                <TextBlock Text="   Longitude:" Style="{StaticResource ShelterStatusHeaderText}"/>
                                <TextBox PlaceholderText="d.ddd" Width="150" 
                                         Style="{StaticResource MuniStatusTextBox}" Tag="37b."/>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="3" BorderBrush="Black" BorderThickness="1,0,1,0">
