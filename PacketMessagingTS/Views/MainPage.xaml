<Page x:Class="PacketMessagingTS.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:tg="using:Telerik.UI.Xaml.Controls.Grid"
      Style="{StaticResource PageStyle}"
      mc:Ignorable="d">
    <RelativePanel Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
                   x:Name="ContentArea"
                   Margin="{StaticResource MediumLeftRightMargin}">
        <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->

        <Pivot x:Name="MainPagePivot" 
               RelativePanel.AlignTopWithPanel="True"
               RelativePanel.AlignLeftWithPanel="True"
               RelativePanel.AlignRightWithPanel="True"
	           RelativePanel.Above="ButtomCommandBar"
               FontFamily="Bahnschrift" >
            <!--SelectionChanged="MainPagePivot_SelectionChanged" >-->

            <!--  Inbox  -->
            <PivotItem x:Uid="Main_Inbox"  x:Name="InBox"  >
            </PivotItem>

            <!--  Sent Items  -->
            <PivotItem x:Uid="Main_SentItems" x:Name="Sent" >
            </PivotItem>

            <!--  Outbox  -->
            <PivotItem x:Uid="Main_Outbox" x:Name="OutBox" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" Margin="{StaticResource EightTopMargin}"
                                x:Name="outbox"
                                ItemsSource="{x:Bind ViewModel.Source}" />
            </PivotItem>

            <!--  Drafts  -->
            <PivotItem x:Uid="Main_Drafts" x:Name="Drafts" >
                <tg:RadDataGrid ColumnDataOperationsMode="Flyout" x:Name="drafts" ItemsSource="{x:Bind ViewModel.Source}" />
            </PivotItem>

            <!--  Archived Items  -->
            <PivotItem x:Uid="Main_ArchivedItems" x:Name="Archive" >
            </PivotItem>

            <!--  Deleted Items  -->
            <PivotItem x:Uid="Main_DeletedItems" x:Name="Deleted" ></PivotItem>

        </Pivot>

        <CommandBar x:Name="ButtomCommandBar"
				    RelativePanel.AlignBottomWithPanel="True"
				    RelativePanel.AlignRightWithPanel="True"
				    RelativePanel.AlignLeftWithPanel="True" >
            <AppBarButton Label="Open" Icon="OpenFile" Click="AppBarMainPage_OpenMessage" />
            <!--<AppBarButton x:Name="appBarPrint" Label="Print Message" HorizontalAlignment="Right" Click="AppBarPrint_Click">
                <AppBarButton.Icon>
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE2F6;"/>
                </AppBarButton.Icon>
            </AppBarButton>-->
            <AppBarButton Label="Send/Receive" Icon="Send" Click="AppBarMainPage_SendReceive" />
            <AppBarButton Label="Delete Item" Icon="Delete" Click="AppBarMainPage_DeleteItemAsync" HorizontalAlignment="Right" />
        </CommandBar>
    </RelativePanel>
</Page>
