<MyBaseNamespace:FormControlBase
    x:Class="ICS213RRPackItFormControl.ICS213RRPackItControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ICS213RRPackItFormControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:MyNamespace="using:ToggleButtonGroupControl"
    xmlns:MyBaseNamespace="using:FormControlBaseClass"

    mc:Ignorable="d"
    d:DesignHeight="1500"
    d:DesignWidth="800">

    <MyBaseNamespace:FormControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ICSFormsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Name="ToFromHeaderTemplate">
                <TextBlock Text="{Binding}" FontSize="12" FontFamily="Times New Roman" 
                           FontWeight="Bold" Foreground="Black" />
            </DataTemplate>
        </ResourceDictionary>
    </MyBaseNamespace:FormControlBase.Resources>

    <StackPanel x:Name="PrintableArea" RequestedTheme="Light" >
        <Border x:Name="Form213RR" BorderBrush="Black" BorderThickness="1" Padding="15" >
            <StackPanel >
                <Border BorderBrush="Black" BorderThickness="0,1,1,0">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,0,0"/>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center" >
                            <TextBlock  FontSize="20" FontFamily="Arial Black" FontWeight="Bold" 
                                   Foreground="Black" Text="SCC EOC RESOURCE REQUEST FORM" 
                                   HorizontalAlignment="Center" Margin="5,0" />
                            <Grid Grid.Column="0" HorizontalAlignment="Stretch" Margin="5,0">
                                <TextBlock Text="Version 8/17" HorizontalAlignment="Left"/>
                                <TextBlock Text="PIF: 2.0" HorizontalAlignment="Right"/>
                            </Grid>
                        </StackPanel>
                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,0,0,0"/>

                        <TextBox Grid.Column="1" x:Name="messageNo"  
                                     Text="{x:Bind OriginMsgNo, Mode=TwoWay}"
							    	 TextAlignment="Center" BorderBrush="White" Margin="10,0,10,2"  
                                     HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                     Header="Origin:"
                                     Tag="MsgNo,required,Enter a Message Number." 
                                     TextChanged="Subject_Changed"/>

                        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1,0,0,0"/>
                        <TextBox Grid.Column="2" x:Name="destinationMsgNo" 
                                     TextAlignment="Center" BorderBrush="White" 
                                     Margin="10,0,10,2" Tag="2"
                                     Text="{x:Bind DestinationMsgNo}"
                                     HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                     Header="Destination:"/>

                    </Grid>
                </Border>
                <StackPanel>
                    <Grid BorderBrush="Black" BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <!--<Border Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,0,0">-->
                        <TextBlock Grid.Column="0" Text="Date:" Style="{StaticResource LabelFontTNR14B}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <TextBox Grid.Column="1" Name="textBoxMsgDate" Text="{x:Bind MsgDate, Mode=TwoWay}" 
                                 PlaceholderText="mm/dd/yy" Margin="2"  Tag="1a.,required"
                                 TextChanged="TextBox_TextChanged"/>
                        <TextBlock Grid.Column="2" Text="Time:" Style="{StaticResource LabelFontTNR14B}"
                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <TextBox Grid.Column="3" Name="textBoxMsgTime" Margin="2" 
                                 Text="{x:Bind MsgTime, Mode=TwoWay}" 
                                 PlaceholderText="hh:mm" Tag="1b.,required"
                                 TextChanged="TextBox_TextChanged"/>
                        <Border Grid.Column="4" BorderBrush="Black" BorderThickness="1,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource LabelFontTNR14B}" 
                                           Text="Handling:" VerticalAlignment="Center" Margin=" 5"/>
                                <MyNamespace:ToggleButtonGroup x:Name="handlingOrder" 
                                                               CheckedControlName ="{x:Bind HandlingOrder, Mode=TwoWay}" 
                                                               Tag="5.,required,Indicate Msg. Handling Order."/>
                                <RadioButton x:Name="immediate" GroupName="handlingOrder" 
                                             Style="{StaticResource RadioButtonTNR12B}" Margin="10,0" Padding="4" 
                                             Content="IMMEDIATE" Checked="Subject_Changed"
                                             ToolTipService.ToolTip="As soon as possible" Tag="IMMEDIATE">
                                </RadioButton>
                                <RadioButton x:Name="priority" GroupName="handlingOrder" 
                                             Style="{StaticResource RadioButtonTNR12B}" Margin="10,0" Padding="4" 
                                             Content="PRIORITY" Checked="Subject_Changed"
                                             ToolTipService.ToolTip="Less than one hour" Tag="PRIORITY">
                                </RadioButton>
                                <RadioButton x:Name="routine" GroupName="handlingOrder" 
                                             Style="{StaticResource RadioButtonTNR12B}" Margin="10,0" Padding="4" 
                                             Content="ROUTINE" Checked="Subject_Changed"
                                             ToolTipService.ToolTip="More than one hour" Tag="ROUTINE"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="LightGray" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                        <TextBlock x:Name="labelTo" Grid.Column="0"  Style="{StaticResource LabelFontTNR14B}" Text=" To:" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <StackPanel Grid.Column="1" >
                            <Border BorderBrush="Black" BorderThickness="0,1">
                                <StackPanel >
                                    <TextBlock Padding="10,2,0,2" FontSize="12" FontFamily="Times New Roman" 
                                               FontWeight="Bold" Foreground="Black"
                                               Text="7.) ICS Position:"  />
                                    <AutoSuggestBox x:Name="autoSuggestBoxToICSPosition" Margin="10,0,10,2"                                                        
                                                        PlaceholderText="Select ICS Position"
                                                    Style="{StaticResource AutoSuggestICSPosition}"
                                                        TextChanged="TextBoxFromICSPosition_TextChanged"
                                                        SuggestionChosen="TextBoxFromICSPosition_SuggestionChosen"
                                                        Tag="7a.,required,Enter a To Position." VerticalAlignment="Top"/>
                                    <!--<ComboBox Visibility="Collapsed" Tag="21|" FontFamily="Times New Roman" />-->
                                    <!--<TextBox  x:Name="textBoxToICSPosition" Visibility="Collapsed" Tag="20" />-->
                                    <!--<ComboBox x:Name="comboBoxToICSPosition" Margin="10,0,10,2" 	
                                                  ItemsSource="{x:Bind ICSPosition}"
                                                  HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                  Header="7.) ICS Position:"
												  HorizontalAlignment="Stretch" IsEditable="True"
												  BorderThickness="2" 
                                                  Tag="21,required,Enter a To ICS Position."  
                                                  SelectionChanged="ICSPosition_SelectionChanged" VerticalAlignment="Top"
                                                  />-->
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,0,1" >
                                <StackPanel >
                                    <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5"  Text="9a.) Location:" />-->
                                    <TextBox x:Name="toLocation" Margin="10,0,10,2" 
                                             TextChanged="TextBox_TextChanged"
                                             Tag="7b.,required,Enter a To Location."
                                             HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                             Header="Location:"/>
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                <StackPanel >
                                    <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Name:" />-->
                                    <TextBox x:Name="toName" BorderThickness="1" Margin="10,0,10,2" Tag="7c."
                                             HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                             Header="Name:"/>
                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,0,0" Margin="0, 0">
                                <StackPanel >
                                    <TextBox x:Name="toContactInfo" 
                                             BorderThickness="1" Margin="10,0,10,2" Tag="7d."
                                             TextChanged="PhoneNumber_TextChanged"
                                             HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                             Header="Contact Info:"/>

                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <Border Grid.Column="2" Background="LightGray" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                        <TextBlock x:Name="labelFrom" Grid.Column="2" Style="{StaticResource LabelFontTNR14B}" Text=" From:" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="3" BorderBrush="Black" BorderThickness="0,1,1,0">
                            <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                <StackPanel>
                                    <TextBlock Padding="10,2,0,2" FontSize="12" FontFamily="Times New Roman" 
                                               FontWeight="Bold" Foreground="Black" Text="8.) ICS Position:" />
                                    <AutoSuggestBox x:Name="autoSuggestBoxFromICSPosition" Margin="10,0,10,2"
                                                        PlaceholderText="Select ICS Position"
                                                    Style="{StaticResource AutoSuggestICSPosition}"
                                                        TextChanged="TextBoxFromICSPosition_TextChanged"
                                                        SuggestionChosen="TextBoxFromICSPosition_SuggestionChosen"
                                                        Tag="8a.,required,Enter a From position." FontFamily="Times New Roman"/>
                                    <!--<TextBox  x:Name="textBoxFromICSPosition" Visibility="Collapsed" Tag="23" />-->
                                    <!--<ComboBox x:Name="comboBoxFromICSPosition" Margin="10,0,10,2" 	
                                                  ItemsSource="{x:Bind ICSPosition}"
                                                  HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                  Header="8.) ICS Position:"
                                                  PlaceholderText="Choose one or type a position"
												  IsEditable="True"
                                                  Tag="24,required,Enter a From position."  
                                                  SelectionChanged="ICSPosition_SelectionChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                  />-->
                                </StackPanel>
                                <!--<StackPanel >
										<TextBlock Style="{StaticResource LabelFontTNR14B}" Text="ICS Position:" Foreground="LightSalmon" Padding="5,0,5,5" />
										<RelativePanel x:Name="fromICSPos" >
											<Button x:Name="buttonSelectFromICSPosInput" RelativePanel.AlignVerticalCenterWithPanel="True" Content="Manual Input" Click="buttonSelectICSPosInput_Click" Margin="5,0,0,2" />
											<TextBox x:Name="textBoxFromICSPosition" Style="{StaticResource TypedText}" 
												RelativePanel.RightOf="buttonSelectFromICSPosInput"
												RelativePanel.AlignRightWithPanel="True"	 
												BorderBrush="White" Margin="10,0,10,2" Visibility="Collapsed"
                                                Tag="required,Enter a From position."/>
											-->
                                <!--<ComboBox x:Name="comboBoxFromICSPosition" Margin="9.667,0,10,2" 
												RelativePanel.RightOf="buttonSelectFromICSPosInput"
												RelativePanel.AlignRightWithPanel="True" HorizontalAlignment="Stretch"
												BorderBrush="White" BorderThickness="2" Tag="required,Enter a From position." PlaceholderText="Select ICS Position" >
											</ComboBox>-->
                                <!--
										</RelativePanel>
									</StackPanel>-->
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,0,1" >
                                <StackPanel >
                                    <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="9b.) Location:" />-->
                                    <TextBox x:Name="fromLocation" Margin="10,0,10,2" 
                                             TextChanged="TextBox_TextChanged"
                                             Tag="8b.,required,Enter a From Location."
                                             HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                             Header="Location:"/>

                                </StackPanel>
                            </Border>
                            <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                <StackPanel >
                                    <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Name:" />-->
                                    <TextBox x:Name="fromName"  BorderThickness="1" Margin="10,0,10,2" Tag="8c."
                                             HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                             Header="Name:"/>

                                </StackPanel>
                            </Border>
                            <!--<Border BorderBrush="Black" BorderThickness="0,0,0,0" Margin="0, 0">-->
                                <StackPanel >
                                    <TextBox x:Name="fromContactInfo" 
                                             Margin="10,0,10,2" Tag="8d." BorderThickness="1" 
                                             TextChanged="PhoneNumber_TextChanged"
                                             HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                             Header="Contact Info:"/>
                                </StackPanel>
                            <!--</Border>-->
                        </StackPanel>
                    </Grid>

                    <Grid BorderBrush="Black" BorderThickness="1,1,1,1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0" BorderBrush="Black" BorderThickness="0,1,0,1">
                            <!--<TextBlock Text="1. Incident Name" Style="{StaticResource EOC213RRFieldHeader}" Margin="5,2,0,0"/>-->
                            <TextBox Name="incidentName" Margin="5,2" AcceptsReturn="True" 
                                     Text="{x:Bind IncidentName, Mode=TwoWay}"
                                     TextChanged="Subject_Changed" 
									 Tag="21.,required,Enter the Incident Name."
                                     HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                     Header="1. Incident Name:"/>
                        </StackPanel>
                        <Grid Grid.Column="1" Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="0.8*"/>
                                <ColumnDefinition Width="1.2*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,0,1">
                                <!--<TextBlock Text="2. Date Initiated" Style="{StaticResource EOC213RRFieldHeader}"/>-->
                                <TextBox Name="msgDate" PlaceholderText="mm/dd/yy" 
                                         Text="{x:Bind MsgDate}"
                                         FontFamily="Ariel" FontSize="14"  Margin="5,2" 
                                         TextChanged="TextBox_TextChanged"
                                         Tag="22.,required,Enter the Date Initialized."
                                         HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                         Header="2. Date Initiated:"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" BorderBrush="Black" BorderThickness="1,1,0,1">
                                <!--<TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                <Run Text="3. Time Initiated"/>
                                </TextBlock>-->
                                <TextBox Name="msgTime" PlaceholderText="hh:mm" 
                                         Text="{x:Bind MsgTime, Mode=TwoWay}"
                                         FontFamily="Helvetica" FontSize="14" Margin="5,2"  
                                         TextChanged="TextBox_TextChanged"
                                         Tag="23.,required,Enter the message time."
                                         HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                         Header="3. Time Initiated:"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" BorderBrush="Black" BorderThickness="1,1,0,1">
                                <TextBlock Text="4. Tracking Number" Style="{StaticResource EOC213RRFieldHeader}"/>
                                <TextBlock Text=" (Completed by OA EOC)" Style="{StaticResource EOC213RRHeaderItalic}"/>
                            </StackPanel>
                        </Grid>
                        <!--<Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="0,0,0,0">-->
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" >
                                <TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                    <Run Text="5. Requested by" />
                                    <Run Text=" (Name, agency, email, phone)" FontSize="11" FontStyle="Italic" 
                                         FontWeight="Normal" Foreground="Black"/>
                                </TextBlock>
                                <TextBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Name="requestedBy" FontFamily="Helvetica" FontSize="14"  
                                         AcceptsReturn="True" Margin="5,2" Height="122"
                                         TextChanged="TextBox_TextChanged"
                                         Tag="25.,required,Enter 5. Requested By." />
                            </StackPanel>
                        <!--</Border>-->
                        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="1,0,0,0">
                            <StackPanel >
                                <TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                    <Run Text="6. Prepared by"/>
                                    <Run Text=" (Name, position, email, phone)" FontSize="11" FontStyle="Italic" FontWeight="Normal" Foreground="Black"/>
                                </TextBlock>
                                <TextBox Name="preparedBy" FontFamily="Helvetica" FontSize="14"  BorderThickness="1" 
                                         MinHeight="50" AcceptsReturn="True" Margin="5,2" Tag="26."/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" Grid.Row="3" BorderBrush="Black" BorderThickness="1,1,0,0">
                            <StackPanel >
                                <TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                    <Run Text="7. Approved by"/>
                                    <Run Text=" (Name, position, email, phone)" FontSize="11" FontStyle="Italic" FontWeight="Normal" Foreground="Black"/>
                                </TextBlock>
                                <TextBox Name="approvedBy" FontFamily="Helvetica" FontSize="14" MinHeight="50"  
                                         BorderThickness="1" AcceptsReturn="True" Margin="5,2" Tag="27."/>
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid BorderBrush="Black" BorderThickness="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border Grid.Column="1" Grid.RowSpan="5" BorderBrush="Black" BorderThickness="1,0,0,0" />
                        <Border Grid.Column="0" Grid.RowSpan="5" Background="LightGray" BorderBrush="Black" BorderThickness="0,0,0,0" />
                        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="5" Text="Requesting Agency/EOC Section" 
                                   Style="{StaticResource EOC213RRFieldLabel}" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" >
                            <TextBlock.RenderTransform>
                                <CompositeTransform Rotation="-90" TranslateX="-370"  />
                                <!--<RotateTransform Angle="-90"/>-->
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <Grid Grid.Column="1" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="2.7*"/>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="1.6*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Grid.ColumnSpan="5" Grid.Row="0" BorderBrush="Black" BorderThickness="1,0,0,0"/>
                            <TextBlock Grid.ColumnSpan="5" Grid.Row="0" Text="REQUESTED RESOURCE DETAILS" HorizontalAlignment="Center" 
                                       Style="{StaticResource EOC213RRFieldLabel}" Margin="5"/>
                            <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="1"/>
                            <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,1,1,1"/>
                            <Border Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,1,1,1"/>
                            <Border Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,1,1,1"/>
                            <Border Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" BorderBrush="Black" BorderThickness="0,1,0,1"/>
                            <Border Grid.ColumnSpan="5" Grid.Row="2" BorderBrush="Black" BorderThickness="1,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="8. Qty/Unit" VerticalAlignment="Center" 
                                       HorizontalAlignment="Left" Style="{StaticResource EOC213RRFieldHeader}" Height="16" />
                            <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" 
                                       Style="{StaticResource EOC213RRFieldLabel}" Margin="10,0,0,0">
                                    <Run Text="9. Resource Description"/>
                                    <Run Text=" (Kind/Type if applicable)" FontSize="11" FontStyle="Italic" FontWeight="Normal" Foreground="Black"/>
                            </TextBlock>
                            <TextBlock Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" 
                                       Style="{StaticResource EOC213RRFieldLabel}" Margin="8,0,0,0">
                                    <Run Text="10, Arrival"/>
                                    <Run Text=" (date/time)" FontSize="11" FontStyle="Italic" FontWeight="Normal" Foreground="Black"/>
                            </TextBlock>
                            <TextBlock Grid.Column="3" Grid.Row="1" Text="11. Priority" HorizontalAlignment="Left" 
                                       Style="{StaticResource EOC213RRFieldLabel}" Margin="8,0,0,0"/>
                            <TextBlock Grid.Column="4" Grid.Row="1" Text="12. Est'd Cost" HorizontalAlignment="Left" Style="{StaticResource EOC213RRFieldLabel}" Margin="8,0,0,0"/>
                            <TextBox Grid.Column="0" Grid.Row="2" Name="resourceInfoQuantity" Width="auto" Margin="5,10,5,5" 
                                     AcceptsReturn="True" 
                                     TextChanged="TextBox_TextChanged"
                                     Tag="28.,required,Enter 8. Qty/Unit." MinWidth="0"/>
                            <TextBox Grid.Column="1" Grid.Row="2" Name="resourceInfoDetailedResourceDesc1" Margin="5,10,5,5" 
                                     AcceptsReturn="True" 
                                     TextChanged="TextBox_TextChanged"
                                     Tag="29.,required,Enter 9. Resource Description."/>
                            <TextBox Grid.Column="2" Grid.Row="2" Name="resourceInfoArrival" AcceptsReturn="True" 
                                     PlaceholderText="mm/dd/yy hhmm" 
                                     Margin="5,10,5,5" 
                                     TextChanged="TextBox_TextChanged"
                                     Tag="30.,required,Enter 10. Arrival Date/Time."/>
                            <!--<StackPanel Grid.Column="3" Grid.Row="2" Margin="0,5" />-->
                            <ComboBox Grid.Column="3" Grid.Row="2" Name="resourceInfoPriority" Margin="5,10,5,5" Tag="31.,required"
                                      SelectionChanged="ComboBox_SelectionChanged" 
                                      HorizontalAlignment="Stretch" >
                                <x:String>Now</x:String>
                                <x:String>High (0-4 hrs.)</x:String>
                                <x:String>Medium (5-12 hrs.)</x:String>
                                <x:String>Low (12+ hrs.)</x:String>
                            </ComboBox>
                            <TextBox Grid.Column="4" Grid.Row="2" Name="resourceInfoCost1"  
                                     BorderThickness="1" InputScope="CurrencyAmount" 
                                     AcceptsReturn="True" Margin="5,10,5,5" MinWidth="0" Tag="32."/>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,0,1">
                                <TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                    <Run Text="13. Delivery to"/>
                                    <Run Text=" (Name, position, email, phone)" FontSize="11" FontStyle="Italic" FontWeight="Normal" Foreground="Black"/>
                                </TextBlock>
                                <TextBox Name="deliveryTo" MinHeight="48" Margin="5" AcceptsReturn="True" 
                                         TextChanged="TextBox_TextChanged"
                                         Tag="33.,required,Enter 13. Delivery to."/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" BorderBrush="Black" BorderThickness="1,0,0,1">
                                <TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                    <Run Text="14. Location"/>
                                    <Run Text=" (address or Lat/long., site type)" FontSize="11" FontStyle="Italic" FontWeight="Normal" Foreground="Black"/>
                                </TextBlock>
                                <TextBox Name="deliveryLocation" MinHeight="48" Margin="5" AcceptsReturn="True" 
                                         TextChanged="TextBox_TextChanged"
                                         Tag="34.,required,Enter 14. Location."/>
                            </StackPanel>
                        </Grid>
                        <StackPanel Grid.Column="1" Grid.Row="2" BorderBrush="Black" BorderThickness="0,0,0,1">
                            <TextBlock Style="{StaticResource EOC213RRFieldHeader}">
                                    <Run Text="15. Suitable Substitutes / Suggested Sources"/>
                                    <Run Text=" (name, source, website)" FontSize="11" FontStyle="Italic" FontWeight="Normal" />
                            </TextBlock>
                            <TextBox Name="substitutes" MinHeight="48" Margin="5" 
                                     AcceptsReturn="True" Tag="35."/>
                        </StackPanel>
                        <Grid Grid.Column="1" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" BorderBrush="Black" BorderThickness="1,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource EOC213RRFieldHeader}">
                                        <Run Text="16. Supplement Requirements"/>
                                        <Run Text=" (Include details in #17)" FontSize="11" FontStyle="Italic" FontWeight="Normal" />
