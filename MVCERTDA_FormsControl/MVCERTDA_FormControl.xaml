<MyBaseNamespace:FormControlBase
    x:Class="MVCERTDA_FormsControl.MVCERTDAControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MVCERTDA_FormsControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  	xmlns:MyNamespace="using:ToggleButtonGroupControl"
    xmlns:MyBaseNamespace="using:FormControlBaseClass"

    mc:Ignorable="d"
    d:DesignHeight="1200"
    d:DesignWidth="800">

    <MyBaseNamespace:FormControlBase.Resources>
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ICSFormsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Name="ToFromHeaderTemplate">
                <TextBlock Text="{Binding}" FontSize="12" FontFamily="Times New Roman" FontWeight="Bold" Foreground="Black" Margin="-5,0,0,0"/>
            </DataTemplate>

            <DataTemplate x:Name="smallHeaderTemplate">
                <TextBlock Text="{Binding}" FontSize="12" FontFamily="Times New Roman" FontWeight="Bold" Foreground="Black" Margin="2,0,0,0"/>
            </DataTemplate>

        </ResourceDictionary>
    </MyBaseNamespace:FormControlBase.Resources>

    <StackPanel x:Name="PrintableArea" RequestedTheme="Light" >
        <Border x:Name="Form213" BorderBrush="Black" BorderThickness="1" Padding="15" >
            <StackPanel >
                <Border BorderBrush="Black" BorderThickness="1,1,1,0">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" FontFamily="Arial Black" FontWeight="Bold" 
                                   Foreground="Black" Text="MESSAGE FORM" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,0"/>
                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,0,0,0">
                            <StackPanel >
                                <TextBlock FontSize="9" FontFamily="Arial" FontWeight="Bold" Foreground="Black" 
                                           HorizontalAlignment="Center" Text="2.) Sender's msg #:"/>
                                <TextBox x:Name="senderMsgNo"  
										 TextAlignment="Center" BorderBrush="White" Margin="2,0,2,2" Tag="1" />
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1,0,0,0">
                            <StackPanel Grid.Column="2">
                                <TextBlock  FontSize="9" FontFamily="Arial" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" Text="Message #:"/>
                                <TextBox x:Name="messageNo"  
                                         Text="{x:Bind MessageNo, Mode=TwoWay}"
										 TextAlignment="Center" BorderBrush="White" Margin="2,0,2,2"  
                                         Tag="3,required,Enter a Message Number." TextChanged="Subject_Changed"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1,0,0,0">
                            <StackPanel Grid.Column="3">
                                <TextBlock  FontSize="9" FontFamily="Arial" FontWeight="Bold" Foreground="Black"  
                                            HorizontalAlignment="Center" Text="3.) Receiver's msg #:"/>
                                <TextBox x:Name="receiverMsgNo" TextAlignment="Center" BorderBrush="White" 
                                         Margin="2,0,2,2" Tag="4"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
                <Border BorderBrush="Black" BorderThickness="3">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="11*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0,0">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR12B}" Padding="5,0,5,5" Text="1a.) Date:" />-->
                                        <TextBox x:Name="msgDate" 
                                                 HeaderTemplate="{StaticResource smallHeaderTemplate}"
                                                 Header="1a.) Date:"
                                                 Text="{x:Bind MsgDate, Mode=TwoWay}"
                                                 TextAlignment="Center" BorderBrush="White" 
                                                 Margin="2,0,2,2" Tag="5,required"
                                                 TextChanged="TextBoxRequired_TextChanged"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR12B}" Padding="5,0,5,5" Text="1b.) Time:" />-->
                                        <TextBox x:Name="msgTime" 
                                                 HeaderTemplate="{StaticResource smallHeaderTemplate}"
                                                 Header="1a.) Date:"
                                                 Text="{x:Bind MsgTime}"
                                                 TextAlignment="Center" BorderBrush="White" 
                                                 Margin="2,0,2,2" Tag="18"
                                                 TextChanged="TextBoxRequired_TextChanged"/>
                                    </StackPanel>
                                </Border>
                                <TextBox x:Name="textBox" Height="1" Text="" BorderThickness="0" Margin="0,1" Width="10"/>
                            </StackPanel>
                            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,0,0,0">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource LabelFontTNR12B}" Text="4.) Situation Severity" Margin="10"/>
                                    <MyNamespace:ToggleButtonGroup x:Name="severity" 
                                                                   CheckedControlName="{x:Bind Severity, Mode=TwoWay}" 
                                                                   Tag="required,Indicate Situation Severity."/>
                                    <RadioButton x:Name="emergency" GroupName="severity" Style="{StaticResource RadioButtonTNR12B}" 
                                                 Margin="10, 8" Padding="4" Content="EMERGENCY" Tag="6,required," Checked="Subject_Changed" 
										         ToolTipService.ToolTip="Life threat" FontFamily="Times New Roman"/>
                                    <RadioButton x:Name="urgent" GroupName="severity" Style="{StaticResource RadioButtonTNR12B}" 
                                                 Margin="10, 8" Padding="4" Content="URGENT" Tag="7" Checked="Subject_Changed"
										         ToolTipService.ToolTip="Property threat"/>
                                    <RadioButton x:Name="other" GroupName="severity" Style="{StaticResource RadioButtonTNR12B}" 
                                                 Margin="10, 8" Padding="4" Content="OTHER" Tag="8" Checked="Subject_Changed"
										         ToolTipService.ToolTip="All other"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1,0,0,0">
                                <StackPanel>
                                    <TextBlock Style="{StaticResource LabelFontTNR12B}" Text="5.) Msg. Handling Order" Margin=" 10"/>
                                    <MyNamespace:ToggleButtonGroup x:Name="handlingOrder" 
                                                                   CheckedControlName="{x:Bind HandlingOrder, Mode=TwoWay}"
                                                                   Tag="required,Indicate Msg. Handling Order."/>
                                    <RadioButton x:Name="immediate" GroupName="handlingOrder" Style="{StaticResource RadioButtonTNR12B}" 
                                                 Margin="10, 8" Padding="4" Content="IMMEDIATE" Tag="9" Checked="Subject_Changed"
                                                 ToolTipService.ToolTip="As soon as possible"/>
                                    <RadioButton x:Name="priority" GroupName="handlingOrder" Style="{StaticResource RadioButtonTNR12B}" 
                                                 Margin="10, 8" Padding="4" Content="PRIORITY" Tag="10" Checked="Subject_Changed"
                                                 ToolTipService.ToolTip="Less than one hour"/>
                                    <RadioButton x:Name="routine" GroupName="handlingOrder" Style="{StaticResource RadioButtonTNR12B}" 
                                                 Margin="10, 8" Padding="4" Content="ROUTINE" Tag="11" Checked="Subject_Changed"
                                                 ToolTipService.ToolTip="More than one hour"/>
                                </StackPanel>
                            </Border>
                            <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1,0,0,0">
                                <StackPanel x:Name="msgRequest" Grid.Column="3">
                                    <TextBlock Style="{StaticResource LabelFontTNR12B}"  Text="6.) Message requests" Margin="10"/>
                                    <TextBlock Style="{StaticResource LabelFontTNR12B}" Text="Action" Margin="10,0,0,0"/>
                                    <MyNamespace:ToggleButtonGroup x:Name="action"/>
                                    <StackPanel Orientation="Horizontal">
                                        <RadioButton x:Name="actionYes" GroupName="action" Style="{StaticResource RadioButtonTNR12B}" 
                                                     Margin="10, 0" Padding="4" Content="Yes" Tag="12"/>
                                        <RadioButton x:Name="actionNo" GroupName="action" Style="{StaticResource RadioButtonTNR12B}" 
                                                     Content="No" Tag="13" Margin="-60,0,0,0"  Padding="4"/>
                                    </StackPanel>
                                    <TextBlock Style="{StaticResource LabelFontTNR12B}" Text="Reply" Margin="10,0,0,0" />
                                    <StackPanel Orientation="Horizontal">
                                        <MyNamespace:ToggleButtonGroup x:Name="reply"/>
                                        <RadioButton x:Name="replyYes" GroupName="reply" Style="{StaticResource RadioButtonTNR12B}" 
                                                     Margin="10,0,0,0" Content="Yes, by" Tag="14" Width="65" Padding="4" MinWidth="50"/>
                                        <TextBox x:Name="replyBy"  HorizontalAlignment="Left" PlaceholderText="hhmm" 
                                                 UseLayoutRounding="False" 
                                                 d:LayoutRounding="Auto" VerticalAlignment="Center" Tag="15"/>

                                        <!--<TextBlock Style="{StaticResource LabelFontTNR12B}" Padding="0, 0" Text=", by" Width="20" />-->
                                        <RadioButton x:Name="replyNo" GroupName="reply" Style="{StaticResource RadioButtonTNR12B}" 
                                                     Content="No" Tag="16" Width="50" Margin="10,0,0,0" Padding="4" MinWidth="50"/>
                                    </StackPanel>
                                    <CheckBox x:Name="forInfo" Style="{StaticResource CheckBoxTNR12B}" 
                                              Margin="10,5,4,5" Content="FOR INFO" Tag="17" Padding="4"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="LightGray" BorderBrush="Black" BorderThickness="0,1,1,1"/>
                            <TextBlock x:Name="labelTo" Grid.Column="0"  Style="{StaticResource LabelFontTNR14B}" Text=" To:"/>
                            <StackPanel Grid.Column="1" >
                                <Border BorderBrush="Black" BorderThickness="0,1">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="7.) ICS Position:"  />-->
                                        <!--<AutoSuggestBox x:Name="autoSuggestBoxToICSPosition" Margin="10,0,10,2"
                                                        ItemsSource="{x:Bind ICSPosition}"
                                                        PlaceholderText="Select ICS Position"
                                                        TextChanged="textBoxFromICSPosition_TextChanged"
                                                        SuggestionChosen="textBoxFromICSPosition_SuggestionChosen"
                                                        Tag="20,required,Enter a To Position." VerticalAlignment="Top"/>-->
                                        <TextBox  x:Name="textBoxToICSPosition" Visibility="Collapsed" Tag="20" />
                                        <ComboBox x:Name="comboBoxToICSPosition" Margin="10,0,10,0" 	
                                                  ItemsSource="{x:Bind ICSPosition}"
                                                  HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                  Header="7.) ICS Position:"
                                                  Text="{x:Bind ToICSPosition, Mode=TwoWay}"
                                                  PlaceholderText="Choose one or type a position"
												  HorizontalAlignment="Stretch" IsEditable="True"
												  BorderThickness="2" 
                                                  Tag="21,required,Enter a From position."  
                                                  SelectionChanged="ICSPosition_SelectionChanged" VerticalAlignment="Top"
                                                  />

                                        <!--<ComboBox Visibility="Collapsed" Tag="21" />-->
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1" >
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5"  Text="9a.) Location:" />-->
                                        <TextBox x:Name="textBoxToLocation"  BorderBrush="White" Margin="10,0,10,2" 
                                                 HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                 Header="9a.) Location:"
                                                 Text="{x:Bind ToLocation, Mode=TwoWay}"
                                                 TextChanged="TextBoxRequired_TextChanged"
                                                 Tag="25,required,Enter a To Location."/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Name:" />-->
                                        <TextBox x:Name="toName"  BorderBrush="White" Margin="10,0,10,2" 
                                                 HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                 Header="Name:"
                                                 Tag="27"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0, 0">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Telephone number:" />-->
                                        <TextBox x:Name="toTelephone" PlaceholderText="(123) 456-7890" 
                                                 HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                 Header="Telephone number:"
                                                 InputScope="TelephoneNumber" BorderBrush="White" Margin="10,0,10,2" Tag="29"
                                                 TextChanged="PhoneNumber_TextChanged"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <Border Grid.Column="2" Background="LightGray" BorderBrush="Black" BorderThickness="1"/>
                            <TextBlock x:Name="labelFrom" Grid.Column="2" Style="{StaticResource LabelFontTNR14B}" Text=" From:" />
                            <StackPanel Grid.Column="3" >
                                <Border BorderBrush="Black" BorderThickness="0,1">
                                    <StackPanel>
                                        <TextBox  x:Name="textBoxFromICSPosition" Visibility="Collapsed" Tag="23" />
                                        <ComboBox x:Name="comboBoxFromICSPosition" Margin="10,0,10,2" 	
                                                  ItemsSource="{x:Bind ICSPosition}"
                                                  HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                  Header="8.) ICS Position:"
                                                  PlaceholderText="Choose one or type a position"
												  IsEditable="True"
                                                  Tag="24,required,Enter a From position."  
                                                  SelectionChanged="ICSPosition_SelectionChanged" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                  />

                                        <!--<AutoSuggestBox x:Name="autoSuggestBoxFromICSPosition" Margin="10,0,10,2"
                                                        BorderBrush="Green"
                                                        ItemsSource="{x:Bind ICSPosition}"
                                                        PlaceholderText="Select ICS Position"
                                                        TextChanged="textBoxFromICSPosition_TextChanged"
                                                        SuggestionChosen="textBoxFromICSPosition_SuggestionChosen"
                                                        Tag="23,required,Enter a From position." VerticalAlignment="Top" HorizontalAlignment="Stretch"/>-->
                                        <!--<ComboBox Visibility="Collapsed" Tag="24" />-->
                                    </StackPanel>
                                    <!--
										</RelativePanel>
									</StackPanel>-->
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1" >
                                    <StackPanel >
                                        <TextBox  x:Name="textBoxFromLocation" Visibility="Collapsed" Tag="27" />
                                        <ComboBox x:Name="comboBoxFromLocation"
                                                  ItemsSource="{x:Bind CERTLocationTacticalCalls, Mode=OneWay}" 
                                                  HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                  Header="9b.) Location:"
                                                  Text="{x:Bind FromLocation, Mode=TwoWay}"
                                                  DisplayMemberPath="AgencyName"
                                                  SelectedValuePath = "TacticalCallsign"
                                                  SelectedValue="{x:Bind CERTLocationValue, Mode=OneWay}"
                                                  Margin="10,0,10,2" IsEditable="True"
                                                  Tag="28,required,Enter a CERT Location." 
                                                  HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                                                  SelectionChanged="ComboBoxFromLocation_SelectionChanged"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Name:" />-->
                                        <TextBox x:Name="fromName"  BorderBrush="White" Margin="10,0,10,2" 
                                                 HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                 Header="Name:"
                                                 Tag="28"/>
                                    </StackPanel>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="0,0,0,1" Margin="0, 0">
                                    <StackPanel >
                                        <!--<TextBlock Style="{StaticResource LabelFontTNR14B}" Padding="5,0,5,5" Text="Telephone number:" />-->
                                        <TextBox x:Name="fromTelephone" PlaceholderText="(123) 456-7890" 
                                                 HeaderTemplate="{StaticResource ToFromHeaderTemplate}"
                                                 Header="Telephone number:"
                                                 InputScope="TelephoneNumber" Margin="10,0,10,2" Tag="30" BorderBrush="White"
                                                 TextChanged="PhoneNumber_TextChanged"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" Text="10.) SUBJECT:" Style="{StaticResource LabelFontTNR14B}" 
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBox  Grid.Column="1" Grid.Row="0" x:Name="subject" 
                                      
                                      Tag="33,required,Enter a Subject." 
                                      TextChanged="Subject_Changed" 
                                      Margin="5,2,5,2" IsSpellCheckEnabled="True" HorizontalAlignment="Stretch" />
                            <TextBox Grid.Column="2" Grid.Row="0" x:Name="comments" Margin="5,2,5,2" 
                                         IsSpellCheckEnabled="True" Tag="34"
                                         TextChanged="Subject_Changed"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="11.) REFERENCE:" Style="{StaticResource LabelFontTNR14B}"   VerticalAlignment="Center" Margin="5,0,0,0"/>
                            <TextBox  Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" x:Name="reference" TextChanged="Subject_Changed" 
                                      Margin="5,2,5,2" Tag="36"/>
                        </Grid>
                        <!--<StackPanel Orientation="Horizontal">
							<TextBlock Style="{StaticResource LabelFontTNR14B}" Text="SUBJECT:" Foreground="LightSalmon" VerticalAlignment="Center" Margin="5,0,0,0"/>
							<TextBox x:Name="subject"   Width="585" Tag="required" TextChanged="Subject_Changed" Margin="5,2,5,2"/>
						</StackPanel>-->
                        <!--<StackPanel Orientation="Horizontal">
							<TextBlock Style="{StaticResource LabelFontTNR14B}" Text="REFERENCE:" VerticalAlignment="Center" Margin="5,0,0,0"/>
							<TextBox x:Name="reference"  Width="560" Margin="5,0,0,0" >
								-->
                        <!--<TextBox.ToolTip>Number of earlier message</TextBox.ToolTip>-->
                        <!--
							</TextBox>
						</StackPanel>-->
                        <TextBlock Style="{StaticResource LabelFontTNR12B}" Text="12.) Message:" Margin="5,0,0,0"/>
                        <Grid BorderBrush="Black" BorderThickness="0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="0,0,1,1">
                                <TextBlock  Text="Fire and Hazard" HorizontalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="0,0,1,1">
                                <TextBlock Text="Building" HorizontalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="4" BorderBrush="Black" BorderThickness="0,0,1,1">
                                <TextBlock  Text="People" HorizontalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="12" Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="0,0,1,1">
                                <TextBlock Grid.ColumnSpan="2" Text="Roads" HorizontalAlignment="Center" />
                            </Border>
                            <TextBlock Grid.Row="0" Grid.Column="14" Grid.RowSpan="2" Text="Other" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <Border Grid.Row="0" Grid.Column="15" BorderBrush="Black" BorderThickness="0">
                                <TextBlock Text="Neighborhood" HorizontalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Fires" Style="{StaticResource LabelFontTNR14B}"/>
                            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Gas Leak" Style="{StaticResource LabelFontTNR12}"/>
                            <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Water Leak" />
                            <Border Grid.Row="1" Grid.Column="3" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Electrical" />
                            <Border Grid.Row="1" Grid.Column="4" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="Chemical" />
                            <Border Grid.Row="1" Grid.Column="5" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="5" Text="Light" />
                            <Border Grid.Row="1" Grid.Column="6" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="6" Text="Mod" />
                            <Border Grid.Row="1" Grid.Column="7" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="7" Text="Heavy" />
                            <Border Grid.Row="1" Grid.Column="9" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="8" Text="Immediate" />
                            <Border Grid.Row="1" Grid.Column="9" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="9" Text="Delayed" />
                            <Border Grid.Row="1" Grid.Column="10" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="10" Text="Trapped" />
                            <Border Grid.Row="1" Grid.Column="11" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="11" Text="Morgue" />
                            <Border Grid.Row="1" Grid.Column="12" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="12" Text="Access" />
                            <Border Grid.Row="1" Grid.Column="13" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="13" Text="No Access" />
                            <!--<TextBlock Grid.Row="1" Grid.Column="14" Text="Other" />-->
                            <Border Grid.Row="1" Grid.Column="15" BorderBrush="Black" BorderThickness="0,0,1,1"/>
                            <TextBlock Grid.Row="1" Grid.Column="15" Text="% Surveyed" Width="auto"/>
                            <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                            <TextBox Grid.Row="2" Grid.Column="0" x:Name="fires" Margin="4" Tag="37" TextChanged="DamageAccessmentRequired_TextChanged"/>
                            <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,1,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="gasLeak" Margin="4" Tag="38"/>
                            <TextBox Grid.Row="2" Grid.Column="2" x:Name="waterLeak" Margin="4" Tag="39"/>
                            <TextBox Grid.Row="2" Grid.Column="3" x:Name="electrical" Margin="4" Tag="40"/>
                            <TextBox Grid.Row="2" Grid.Column="4" x:Name="chemical" Margin="4" Tag="41" />
                            <TextBox Grid.Row="2" Grid.Column="5" x:Name="light" Margin="4" Tag="42" />
                            <TextBox Grid.Row="2" Grid.Column="6" x:Name="mod" Margin="4" Tag="43" />
                            <TextBox Grid.Row="2" Grid.Column="7" x:Name="heavy" Margin="4" Tag="44" />
                            <TextBox Grid.Row="2" Grid.Column="8" x:Name="peopleImmediate" Margin="4" Tag="45" />
                            <TextBox Grid.Row="2" Grid.Column="9" x:Name="delayed" Margin="4" Tag="46" />
                            <TextBox Grid.Row="2" Grid.Column="10" x:Name="trapped" Margin="4" Tag="47" />
                            <TextBox Grid.Row="2" Grid.Column="11" x:Name="morgue" Margin="4" Tag="48" />
                            <TextBox Grid.Row="2" Grid.Column="12" x:Name="access" Margin="4" Tag="49" />
                            <TextBox Grid.Row="2" Grid.Column="13" x:Name="noAccess" Margin="4" Tag="50" />
                            <TextBox Grid.Row="2" Grid.Column="14" x:Name="messageOther" Margin="4" Tag="51"/>
                            <TextBox Grid.Row="2" Grid.Column="15" x:Name="surveyed" Margin="4" Tag="52" />
