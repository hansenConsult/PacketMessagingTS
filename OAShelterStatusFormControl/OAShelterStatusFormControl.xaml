                                <TextBox x:Name="availablity" Width="66" HorizontalAlignment="Left"  
                                         Style="{StaticResource ReadOnlyTextBox}" 
                                         Tag="" Margin="2" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Meals Served (last 24 hours):" 
                                       Style="{StaticResource ShelterStatusHeaderText}"/>
                            <TextBox Grid.Column="1" Grid.Row="4" 
                                     Style="{StaticResource MuniStatusTextBox}"
                                     HorizontalAlignment="Stretch" Tag="41." 
                                     Margin="2" VerticalAlignment="Center" />
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="5" Text="NSS Number:" 
                                       Style="{StaticResource ShelterStatusHeaderText}"/>
                            <TextBox Grid.Column="1" Grid.Row="5" x:Name="nssNumber"
                                     Style="{StaticResource MuniStatusTextBox}"
                                     HorizontalAlignment="Stretch" Tag="42." 
                                     Margin=" 2,1,2,1" VerticalAlignment="Center" />
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="6" Text="Pet Friendly:" 
                                       Style="{StaticResource ShelterStatusHeaderText}"/>
                            <ComboBox Grid.Column="1" Grid.Row="6" x:Name="petFriendly"
                                      Style="{StaticResource MuniStatusComboBox}"
                                      ItemsSource="{x:Bind Path=YesNoContentPet}" Tag="43a."
                                      SelectedValuePath="Content"
                                      Loaded="ComboBox_Loaded"/>
                            <TextBox Grid.Column="1" Grid.Row="6" x:Name="petFriendlyTextBox"
                                     Margin="2" Visibility="Collapsed" />
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="7" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="7" Text="Basic Safety Inspection:" 
                                       Style="{StaticResource ShelterStatusHeaderText}"/>
                            <ComboBox Grid.Column="1" Grid.Row="7" x:Name="basicSafety"
                                      Style="{StaticResource MuniStatusComboBox}"
                                      ItemsSource="{x:Bind Path=YesNoContentSafety}" Tag="43b."
                                      SelectedValuePath="Content"
                                      Loaded="ComboBox_Loaded"/>
                            <TextBox Grid.Column="1" Grid.Row="7" x:Name="basicSafetyTextBox"
                                     Margin="2" Visibility="Collapsed" />
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="8" BorderBrush="Black" BorderThickness="0,1,0,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="8" Text="ATC 20 Inspection:" 
