                            <ComboBox Grid.Column="1" Grid.Row="8" x:Name="act20Inspection"
                                      Style="{StaticResource MuniStatusComboBox}"
                                      ItemsSource="{x:Bind Path=YesNoContentArt20}" Tag="43c."
