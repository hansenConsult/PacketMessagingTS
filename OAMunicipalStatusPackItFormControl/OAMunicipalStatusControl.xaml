                                    <TextBlock Grid.Column="2" Grid.Row="3" Text="Secondary EM Contact Phone:" 
                                            Style="{StaticResource MuniStatusFieldTextRight}" />
                                    <Border Grid.Column="3" Grid.Row="3" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                                    <TextBox Grid.Column="3" Grid.Row="3" Name="secEMContactPhone"
                                            InputScope="TelephoneNumber"
                                            Style="{StaticResource MuniStatusPhoneTextBox}" Tag="28."
                                            TextChanged="TextBox_PhoneChanged"/>
                                </Grid>
                        <Grid BorderBrush="Black" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Text="Government Office Status" 
                                            Style="{StaticResource MuniStatusHeaderText}"/>
                            <Border Grid.Column="0" Grid.Row="1" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Office Status:" 
                                    Style="{StaticResource MuniStatusFieldText}"/>
                            <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <ComboBox Grid.Column="1" Grid.Row="1" Name="officeStatus"  
                                    DisplayMemberPath="Item"
                                    ItemsSource="{x:Bind OfficeStatus}"
                                    Style="{StaticResource MuniStatusComboBox}"
                                    Tag="29.,conditionallyrequired,Enter Office Status" HorizontalAlignment="Left"
                                    SelectionChanged="ComboBox_SelectionChanged"
                                    Loaded="ComboBox_Loaded"/>
                            <Border Grid.Column="2" Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <Border Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Expected to Open Date:" 
                                    Style="{StaticResource MuniStatusFieldText}"/>
                            <Border Grid.Column="1" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBox Grid.Column="1" Grid.Row="2" Name="officeOpenDate" 
                                    Style="{StaticResource MuniStatusDateTextBox}" Tag="30."
                                    PlaceholderText="mm/dd/yyyy"
                                    TextChanged="TextBox_DateChanged"/>
                            <Border Grid.Column="2" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBlock Grid.Column="2" Grid.Row="2" Text="Expected to Open Time:" 
                                    Style="{StaticResource MuniStatusFieldTextRight}" />
                            <Border Grid.Column="3" Grid.Row="1" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <Border Grid.Column="3" Grid.Row="2" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBox Grid.Column="3" Grid.Row="2" Name="officeOpenTime" 
                                    Style="{StaticResource MuniStatusTimeTextBox}" 
                                    Tag="31."
                                    TextChanged="TextBox_TimeChanged"/>
                            <Border Grid.Column="0" Grid.Row="3" BorderBrush="Black" BorderThickness="1,1,1,0"/>
                            <TextBlock Grid.Column="0" Grid.Row="3" Text="Expected to Close Date:" 
                                    Style="{StaticResource MuniStatusFieldText}"/>
                            <Border Grid.Column="1" Grid.Row="3" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBox Grid.Column="1" Grid.Row="3" Name="officeCloseDate" 
                                    Style="{StaticResource MuniStatusDateTextBox}" Tag="32."
                                    PlaceholderText="mm/dd/yyyy"
                                    TextChanged="TextBox_DateChanged"/>
                            <Border Grid.Column="2" Grid.Row="3" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBlock Grid.Column="2" Grid.Row="3" Text="Expected to Close Time:" 
                                    Style="{StaticResource MuniStatusFieldTextRight}" />
                            <Border Grid.Column="3" Grid.Row="3" BorderBrush="Black" BorderThickness="0,1,1,0"/>
                            <TextBox Grid.Column="3" Grid.Row="3" Name="officeCloseTime" 
                                    Style="{StaticResource MuniStatusTimeTextBox}" 
                                    Tag="33."
                                    TextChanged="TextBox_TimeChanged"/>
                        </Grid>
                        <Grid BorderBrush="Black" BorderThickness="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Column="0" Text="EOC Status" Style="{StaticResource MuniStatusHeaderText}"/>
