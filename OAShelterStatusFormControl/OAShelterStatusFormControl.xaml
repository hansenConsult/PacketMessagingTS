                                <TextBox x:Name="occupancy" Width="73" HorizontalAlignment="Left" 
                                         Style="{StaticResource MuniStatusNumberTextBox}" Tag="40b.,conditionallyrequired"
                                         TextChanged="Capacity_TextChanged" Margin="2" VerticalAlignment="Center"/>
