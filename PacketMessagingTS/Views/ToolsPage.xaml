      xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"

      mc:Ignorable="d"
      d:DesignWidth="760"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
