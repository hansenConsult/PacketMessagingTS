                            <TextBox Grid.Column="1" Grid.Row="6" x:Name="state"
                                     Style="{StaticResource MuniStatusTextBox}" 
                                     TextChanged="TextBox_TextChanged"
                                     Tag="33c.,conditionallyrequired"/>
