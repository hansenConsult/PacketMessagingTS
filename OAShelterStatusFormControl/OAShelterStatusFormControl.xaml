                                      Loaded="ComboBox_Loaded"/>
                            <!--DisplayMemberPath="Item" -->
                            <TextBox Grid.Column="1" Grid.Row="5" x:Name="shelterCityTextBox"
                                     Margin="2" Width="180" Visibility="Collapsed" />
                            <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="6" BorderBrush="Black" BorderThickness="0,1,0,0"/>
