<MyBaseNamespace:FormControlBase
    x:Name="OAAlliedHealthStatus"
    x:Class="OAAlliedHealthStatus201802FormControl.OAAlliedHealthStatusControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OAAlliedHealthStatus201802FormControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:MyNamespace="using:ToggleButtonGroupControl"
    xmlns:MyBaseNamespace="using:FormControlBaseClass"

    mc:Ignorable="d"
    d:DesignWidth="800" Height="1500">

    <MyBaseNamespace:FormControlBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ICSFormsDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="AlliedTextBox" TargetType="TextBox">
                <Setter Property="FontFamily" Value="Segoe UI"/>
                <Setter Property="FontSize" Value="7"/>
                <Setter Property="Background" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <!--<Setter Property="TextBox.FontWeight" Value="Bold"/>-->
                <Setter Property="TextBox.VerticalAlignment" Value="Center"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Margin" Value="2"/>
            </Style>

            <Style x:Key="AlliedHeaderText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Ariel"/>
                <Setter Property="FontStyle" Value="Normal"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="2"/>
                <!--<Setter Property="Width" Value="36"/>-->
            </Style>
            <Style x:Key="AlliedHeaderTextBold" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Ariel"/>
                <Setter Property="FontStyle" Value="Normal"/>
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="2,0,0,0"/>
            </Style>

            <DataTemplate x:Name="alliedHeaderTemplate">
                <TextBlock Text="{Binding}" FontSize="8" FontFamily="Arial" FontWeight="Bold" Foreground="Black" Margin="2,0,0,0"/>
            </DataTemplate>
            <DataTemplate x:Name="alliedHeaderRequiredTemplate">
                <TextBlock Text="{Binding}" FontSize="8" FontFamily="Arial" FontWeight="Bold" Foreground="Red" Margin="2,0,0,0"/>
            </DataTemplate>
            <DataTemplate x:Name="AlliedFieldNameTemplate">
                <TextBlock Text="{Binding}" FontSize="7" FontFamily="Arial" Foreground="Black" Margin="2,0,0,0"/>
            </DataTemplate>
            <DataTemplate x:Name="AlliedFieldHeaderTemplate">
                <TextBlock Text="{Binding}" FontSize="7" FontFamily="Arial" Foreground="Black" Margin="2,0,0,0"/>
            </DataTemplate>
        </ResourceDictionary>
    </MyBaseNamespace:FormControlBase.Resources>

    <StackPanel x:Name="PrintableArea" RequestedTheme="Light" DataContext="OAAlliedHealthStatusControl" >
        <Border x:Name="FormOAAlliedHealthStatus" BorderBrush="Black" BorderThickness="1" >
            <StackPanel >
                <Border BorderBrush="Black" BorderThickness="1,1,1,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="20" FontFamily="Arial Black" 
                                   FontWeight="Bold" Foreground="Black" Text="OA ALLIED HEALTH STATUS" 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" Margin="8"/>
